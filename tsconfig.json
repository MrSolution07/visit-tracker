{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@api/*": ["./src/api/*"],
      "@dashboard/*": ["./src/dashboard/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}